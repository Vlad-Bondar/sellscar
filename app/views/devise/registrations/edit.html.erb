
<div class="container">
  <h2>Edit <%= resource_name.to_s.humanize %></h2> 
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :user_name %>
      <%= f.text_field :user_name, autofocus: true, autocomplete: "username", class: "form-control rounded-pill" %>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control rounded-pill" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group">
      <%= f.label :password %> <i><%=t('devise.leave_blank')%></i>
      <%= f.password_field :password, autocomplete: "new-password" , class: "form-control rounded-pill"%>
      <% if @minimum_password_length %>
        <em><%= @minimum_password_length%> <%= t('devise.characters_minimum')%></em>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "form-control rounded-pill"%>
    </div>

    <div class="form-group">
      <%= f.label :current_password %> <i>(<%=t('devise.need_current_password')%>)</i>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control rounded-pill" %>
    </div>

    <%= f.submit t('common.update'), class: "btn btn-outline-success"%>    
    <div class="form-inline float-right">  
      <!--<h3>Cancel my account</h3>
      <a href="#" class="badge badge-info">Инфо</a>-->
      <%= button_to t('devise.cancel_account'), registration_path(resource_name), data: { confirm: t('common.confirm') }, method: :delete , class: "btn btn-link ml-3"%>
    </div>
  <% end %>

  <!--<h3>Cancel my account</h3>

  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete , class: "btn btn-outline-success"%></p>-->

  <%= link_to t('common.back'), :back , class: "btn btn-outline-dark my-2"%>
</div>