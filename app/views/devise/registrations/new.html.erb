
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="container mt-6">
    <h2><%= t('common.sign_up') %></h2>
    
    <div class="form-group">
      <%= f.label :user_name %><br />
      <%= f.text_field :user_name, autofocus: true, autocomplete: "username", class: "form-control rounded-pill" %>
    </div>
    
    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control rounded-pill" %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> <%= t('devise.characters_minimum')%>)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control rounded-pill" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control rounded-pill" %>
    </div>

    <div class="actions">
      <%= f.submit t('common.sign_up'), class: "btn btn-outline-success"%>
    </div>
    <%= render "devise/shared/links" %>
  </div>
<% end %>



