<ul class="nav nav-tabs mt-3">
  <li class="nav-item">
    <%- if controller_name != 'sessions' %>
      <%= link_to t('common.sign_in'), new_session_path(resource_name) , class: "nav-link" %><br />
    <% end %>
  </li>

  <li class="nav-item">
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to t('common.sign_up'), new_registration_path(resource_name),class: "nav-link" %><br />
    <% end %>
  </li>

  <li class="nav-item">
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to t('devise.forgot_password'), new_password_path(resource_name),class: "nav-link" %><br />
    <% end %>
  </li>

  <li class="nav-item">
    <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <%= link_to t('devise.receive_confirmation'), new_confirmation_path(resource_name),class: "nav-link" %><br />
    <% end %>
  </li>

  <li class="nav-item">
    <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
      <%= link_to t('devise.receive_unlock'), new_unlock_path(resource_name),class: "nav-link" %><br />  
    <% end %>
  </li>
  
  <li class="nav-item">
    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider),class: "nav-link" %><br />
      <% end %>
    <% end %>
  </li>
</ul>
