<form action="/posts/create" method="POST" >
    <div class="mx-5">
        <% if @post.present? %>
          <% @post.car.errors.each do |attr , msg| %>
            <div class="alert alert-danger" role="alert">
                <%= attr %> <%= msg %>
            </div>
          <% end %>
          <% @post.errors.each do |attr , msg| %>
            <div class="alert alert-danger" role="alert">
                <%= attr %> <%= msg %>
            </div>
          <% end %>
        <% end %> 

        <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default">Price</span>
            </div>
            <input name="car[price]" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default">Car Name</span>
            </div>
            <input name=car[car_name] type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default">Drivetrain</span>
            </div>
            <input name=car[drivetrain] type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default">Location</span>
            </div>
            <input name=car[location] type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default">Transmition</span>
            </div>
            <input name=car[transmition] type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default">VIN</span>
            </div>
            <input name=car[vin] type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default">Exterior collor</span>
            </div>
            <input name=car[exterior_collor] type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default">Interrior collor</span>
            </div>
            <input name=car[interior_collor] type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default">Millage</span>
            </div>
            <input name=car[millage] type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default">Body style</span>
            </div>
            <input name=car[body_style] type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default">Engine</span>
            </div>
            <input name=car[engine] type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default">Short description</span>
            </div>
            <input name=post[small_description] type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
        </div>
        <div class="input-gro1up">
            <div class="input-group-prepend">
                <span class="input-group-text"> Description</span>
            </div>
            <textarea name=post[big_description] class="form-control" aria-label="With textarea"></textarea>
        </div>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <div class="mt-3">
            <button type="submit" class="btn btn-outline-secondary">Publish</button>
        </div>
    </div>
</form>
